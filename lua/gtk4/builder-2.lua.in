local lgi = require("lgi")
local Gtk = lgi.require("Gtk", "4.0")
local Gio = lgi.Gio

-- Another way to use GtkBuilder in LGI

local appID = "io.github.Miqueas.GTK-Examples.Lua.Gtk4.Builder2"
local app = Gtk.Application.new(appID, Gio.ApplicationFlags.DEFAULT_FLAGS)
local builder = Gtk.Builder.new_from_file("@builderPath@")
local ui = builder.objects

function app:on_startup()
  self:add_window(ui.window)
end

function app:on_activate()
  self.active_window:present()
end

return app:run(arg)